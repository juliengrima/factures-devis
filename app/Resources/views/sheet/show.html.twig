{% extends 'base.html.twig' %}

{% block body %}
    <h1>Sheet</h1>

    <table>
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ sheet.id }}</td>
            </tr>
            <tr>
                <th>Line</th>
                <td>{{ sheet.line }}</td>
            </tr>
            <tr>
                <th>Price</th>
                <td>{{ sheet.price }}</td>
            </tr>
        </tbody>
    </table>

    <ul>
        <li>
            <a href="{{ path('sheet_index') }}">Back to the list</a>
        </li>
        <li>
            <a href="{{ path('sheet_edit', { 'id': sheet.id }) }}">Edit</a>
        </li>
        <li>
            {{ form_start(delete_form) }}
                <input type="submit" value="Delete">
            {{ form_end(delete_form) }}
        </li>
    </ul>
{% endblock %}
