{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Validation de paiement</h1>

    {{ form_start(form) }}

    <!-- One -->
    <section id="one" class="wrapper style2 spotlights">
        <section>
            <div class="content">
                <div class="inner">
                    <h2>Validation du paiement</h2>
                    <ul class="icons">
                        <li>Paiement effectu√© :</li>
                        <li>
                            {{ form_widget(form.facture, {'attr': {'id': 'demo-copy'}}) }}
                            {{ form_label(form.facture, 'Facture', {'label_attr': {'for': 'demo-cop'}}) }}
