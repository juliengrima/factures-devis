{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des commandes</h1>

    <ul class="icons align-center">
        <li>
            <a href="{{ path('sheet_new') }}" class="favorite styled">Générer une commande Excel</a>
        </li>
    </ul>

    <div class="left">
        <table id="table_id" class="display text">
            <thead>
                <tr>
                    <th>Fichiers</th>
                </tr>
            </thead>
            <tbody>
            {% for link in links %}
                <tr>
                    <td>
                        {{ link.linkname }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="right">
        <table class="">
            <thead>
                <th>Date</th>
{#                <th>Payée</th>#}
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sheet in sheets %}
                <tr>

                    <td>{{ sheet.date|date('d-m-Y') }}</td>
{#                    <td>{{ sheet.facture }}</td>#}
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('sheet_edit', { 'id': sheet.id }) }}">Modifier/Supprimer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
{% endblock %}
