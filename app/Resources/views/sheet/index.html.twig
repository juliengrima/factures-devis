{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des factures</h1>

    <div class="left">
        <table class="">
            <thead>
                <tr>
                    <th>Fichiers</th>
                </tr>
            </thead>
            <tbody>
            {% for link in links %}
                <tr>
                    <td>
                        {{ link.linkname }}
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>
    <div class="right">
        <table class="">
            <thead>
                <th>Date</th>
                <th>Pay√©e</th>
                <th>Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for sheet in sheets %}
                <tr>

                    <td>{{ sheet.date|date('d-m-Y') }}</td>
                    <td>{{ sheet.facture }}</td>
                    <td>
                        <ul>
                            <li>
                                <a href="{{ path('sheet_edit', { 'id': sheet.id }) }}">Modifier/Supprimer</a>
                            </li>
                        </ul>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </div>



    <ul>
        <li>
            <a href="{{ path('sheet_new') }}">Create a new sheet</a>
        </li>
    </ul>
{% endblock %}
