{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des devis en cours</h1>

    <ul class="icons align-center">
        <li>
            <a href="{{ path('sheetdev_new') }}" class="favorite styled">Générer un devis Excel</a>
        </li>
    </ul>

    <table id="table_id" class="display text">
        <thead>
            <tr>
                <th>Id</th>
                <th>Devis</th>
                <th>Date</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for sheetDev in sheetDevs %}
            <tr>
                <td><a href="{{ path('sheetdev_show', { 'id': sheetDev.id }) }}">{{ sheetDev.id }}</a></td>
                <td>{% if sheetDev.devis %}Yes{% else %}No{% endif %}</td>
                <td>{% if sheetDev.date %}{{ sheetDev.date|date('Y-m-d') }}{% endif %}</td>
                <td>
                    <ul>
                        <li>
                            <a href="{{ path('sheetdev_show', { 'id': sheetDev.id }) }}">show</a>
                        </li>
                        <li>
                            <a href="{{ path('sheetdev_edit', { 'id': sheetDev.id }) }}">edit</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
{% endblock %}
