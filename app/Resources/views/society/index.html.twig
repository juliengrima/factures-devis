{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Liste des clients</h1>

    <div class="icons align-center">
            <a href="{{ path('society_new') }}" class="favorite styled">Enrgistrer un nouvau client</a>
    </div>

    <table id="table_id" class="display text">
        <thead>
            <tr>
                <th>société</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for society in societies %}
            <tr>
                <td>{{ society.societyName }}</td>
                <td>{{ society.address }}</td>
                <td>{{ society.zipcode }}</td>
                <td>{{ society.city }}</td>
                <td>
                    <ul class="list-type">
                        <li>
                            <a href="{{ path('society_show', { 'id': society.id }) }}" class="favorite styled">Montrer</a>
                        </li>
                        <li>
                            <a href="{{ path('society_edit', { 'id': society.id }) }}" class="favorite styled">Modifier/Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
{% endblock %}
