{% extends 'layout.html.twig' %}

{% block body %}
    <h1>Societies list</h1>

    <ul class="icons align-center">
        <li>
            <a href="{{ path('society_new') }}">Enrgistrer une nouvelle société</a>
        </li>
    </ul>

    <table>
        <thead>
            <tr>
                <th class="align-center">Identifiant</th>
                <th>société</th>
                <th>Adresse</th>
                <th>Code postal</th>
                <th>Ville</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for society in societies %}
            <tr>
                <td class="align-center"><a href="{{ path('society_show', { 'id': society.id }) }}">{{ society.id }}</a></td>
                <td>{{ society.societyName }}</td>
                <td>{{ society.address }}</td>
                <td>{{ society.zipcode }}</td>
                <td>{{ society.city }}</td>
                <td>
                    <ul class="icons">
                        <li>
                            <a href="{{ path('society_edit', { 'id': society.id }) }}">Modifier/Supprimer</a>
                        </li>
                    </ul>
                </td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{% endblock %}

{% block javascripts %}
    {{ parent() }}
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
{% endblock %}
