{% extends 'base.html.twig' %}

{% block body %}

    {% trans_default_domain 'FOSUserBundle' %}

    {% if error %}
        <div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
    {% endif %}

        {# ADMIN CONNEXION FORM #}

    <section id="one" class="wrapper style2 spotlights">
        <section>
            <div class="content">
                <form action="{{ path("fos_user_security_check") }}" method="post">

                    {% if csrf_token %}
                        <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                    {% endif %}

                    <div class="row">
                        {#<label for="username">{{ 'security.login.username'|trans }}</label>#}
                        <label for="username">Nom d'utilisateur</label>
                        <input class="input-size" type="text" id="username" name="_username" value="{{ last_username }}" required="required" />
                    </div>
                        <div class="row">
                        {#<label for="password">{{ 'security.login.password'|trans }}</label>#}
                        <label for="password">Mot de passe</label>
                    <input class="input-size"type="password" id="password" name="_password" required="required" />
                    </div>
                    <div class="row">
                        <input class="input-size" type="checkbox" id="remember_me" name="_remember_me" value="on" />
                        {#<label for="remember_me">{{ 'security.login.remember_me'|trans }}</label>#}
                        <label for="remember_me">Se souvenir de moi</label>
                    </div>

                    {% block button %}
                    <button class="align-center"
                            type="submit"
                            id="_submit"
                            name="_submit"
                            value="{{ 'security.login.submit'|trans }}"
                            data-position="bottom"
                            data-delay="50"
                            data-tooltip="Enregistrer">
                        <i class="material-icons">Se connecter</i>
                    </button>
                    {% endblock %}
                </form>
            </div>
        </section>
    </section>

{% endblock %}
